<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:iam:node:user:1-0-0">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php-options>
          <classname>Acme\Schemas\Iam\UserId</classname>
          <default>function() { return UserId::generate(); }</default>
        </php-options>
        <js-options>
          <classname>acme/iam/UserId</classname>
          <default>() => UserId.generate()</default>
        </js-options>
      </field>

      <field name="test_any_of1" type="message">
        <any-of>
          <curie>gdbots:contexts::app</curie>
        </any-of>
      </field>

      <field name="test_any_of2" type="message">
        <any-of>
          <curie>gdbots:contexts::app</curie>
          <curie>gdbots:contexts::cloud</curie>
        </any-of>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>gdbots:iam:mixin:user:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Acme\Schemas\Iam\Node</namespace>
    </php-options>
    <js-options>
      <namespace>acme/iam/node</namespace>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars()
{
  return {user_id: `${this.get('_id')}` };
}
            ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
