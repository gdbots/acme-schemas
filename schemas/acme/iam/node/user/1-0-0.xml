<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:iam:node:user:1-0-0">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php-options>
          <classname>Acme\Schemas\Iam\UserId</classname>
          <default>function() { return UserId::generate(); }</default>
        </php-options>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>gdbots:iam:mixin:user:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Acme\Schemas\Iam\Node</namespace>
    </php-options>
  </schema>
</pbj-schema>
